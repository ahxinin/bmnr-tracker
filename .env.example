# BMNR Tracker 环境变量配置示例
# 复制此文件为 .env 并修改相应值

# ===== 基础配置 =====
# 服务器端口
PORT=3000

# 运行环境 (development | production | test)
NODE_ENV=development

# ===== 代理配置 =====
# 目标网站URL
TARGET_URL=https://trackbmnr.com

# 代理超时时间（毫秒）
PROXY_TIMEOUT=30000

# ===== EdgeOne.ai 特定配置 =====
# 边缘节点区域选择 (auto | asia-east1 | us-west1 | europe-west1)
EDGE_REGION=auto

# 缓存TTL（秒）
CACHE_TTL=3600

# 启用边缘缓存 (true | false)
EDGE_CACHE_ENABLED=true

# ===== 安全配置 =====
# 允许的IP地址列表（逗号分隔，留空表示允许所有）
ALLOWED_IPS=

# 速率限制 - 最大请求数
RATE_LIMIT_MAX=100

# 速率限制 - 时间窗口（毫秒）
RATE_LIMIT_WINDOW=900000

# CORS允许的源（逗号分隔，* 表示允许所有）
CORS_ORIGINS=*

# ===== 日志配置 =====
# 日志级别 (error | warn | info | debug)
LOG_LEVEL=info

# 启用访问日志 (true | false)
ACCESS_LOG_ENABLED=true

# 日志文件路径
LOG_FILE_PATH=./logs/app.log

# ===== 性能配置 =====
# 启用Gzip压缩 (true | false)
COMPRESSION_ENABLED=true

# 静态资源缓存时间（秒）
STATIC_CACHE_MAX_AGE=86400

# 动态内容缓存时间（秒）
DYNAMIC_CACHE_MAX_AGE=300

# ===== 监控配置 =====
# 启用性能监控 (true | false)
PERFORMANCE_MONITORING=true

# 启用错误跟踪 (true | false)
ERROR_TRACKING=true

# 健康检查间隔（秒）
HEALTH_CHECK_INTERVAL=30

# ===== 自定义配置 =====
# 自定义用户代理
CUSTOM_USER_AGENT=BMNR-Tracker-Proxy/1.0

# 最大并发连接数
MAX_CONCURRENT_CONNECTIONS=100

# 连接保持时间（毫秒）
KEEP_ALIVE_TIMEOUT=5000

# ===== 开发配置 =====
# 开发模式下启用详细日志 (true | false)
DEBUG_MODE=false

# 热重载 (true | false)
HOT_RELOAD=false

# 模拟延迟（毫秒，仅开发环境）
SIMULATE_DELAY=0

# ===== 第三方服务配置 =====
# 如果需要集成其他服务，在此添加配置
# API_KEY=your_api_key_here
# DATABASE_URL=your_database_url_here

# ===== 实验性功能 =====
# 启用HTTP/2 (true | false)
HTTP2_ENABLED=true

# 启用WebSocket支持 (true | false)
WEBSOCKET_ENABLED=false

# 启用服务器推送 (true | false)
SERVER_PUSH_ENABLED=false